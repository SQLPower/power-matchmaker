<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.sqlpower.matchmaker.munge">
	<class name="AbstractMungeStep"
		   table="mm_munge_step" abstract="true">
		
		<id name="oid" type="long" access="field">
			<column name="munge_step_oid" />
			<generator class="native">
				<param name="sequence">mm_munge_step_oid_seq</param>
			</generator>
		</id>
		   
		<discriminator column="step_class" length="1000" />

		<many-to-one name="parent" 
			class="MungeProcess" 
			fetch="select">
			<column name="munge_process_oid"/>
		</many-to-one>
		<property name="name" type="string">
			<column name="step_name" length="100" />
		</property>
		<property name="lastUpdateDate" type="timestamp" access="field">
			<column name="last_update_date" length="23" />
		</property>
		<property name="lastUpdateOsUser" type="string" access="field">
			<column name="last_update_os_user" length="30" />
		</property>
		<property name="lastUpdateAppUser" type="string" access="field">
			<column name="last_update_user" length="30" />
		</property>
		<property name="visible"
			type="ca.sqlpower.matchmaker.util.CustomBooleanType">
			<column name="visible_ind" length="1" />
		</property>

		<map name="parameters" access="field" table="mm_munge_step_parameter">
			<key column="munge_step_oid"/>
			<index column="parameter_name" type="string"/>
			<element column="parameter_value" type="string"/>
		</map>
		
		<!-- Note, must not be inverse=true, or the list indexes will come out null in the table -->
		<list name="children" cascade="all-delete-orphan"
			lazy="false" fetch="subselect">
			<key>
				<column name="munge_step_oid" not-null="true" />
			</key>
			<index column="seq_no" />
			<one-to-many
				class="ca.sqlpower.matchmaker.munge.MungeStepOutput" />
		</list>
		
		<list name="inputs" lazy="true" table="mm_munge_step_input">
			<key column="munge_step_oid" not-null="true" />
			<index column="seq_no" />
			<composite-element class="ca.sqlpower.matchmaker.munge.AbstractMungeStep$Input">
				<parent name="parentStep"/>
				<many-to-one name="current"
							class="ca.sqlpower.matchmaker.munge.MungeStepOutput"
							column="munge_step_output_oid" />
				<property name="name" type="string">
					<column name="INPUT_NAME" length="100" />
				</property>
				<property name="type" type="java.lang.Class">
					<column name="INPUT_TYPE" length="1000" />
				</property>
			</composite-element>
		</list>
		<!-- <list name="inputs" cascade="all-delete-orphan"
			lazy="false" fetch="subselect">
			<key>
				<column name="munge_step_oid" not-null="true" />
			</key>
			<index column="seq_no" />
			<one-to-many
				class="ca.sqlpower.matchmaker.munge.AbstractMungeStep$Input" />
		</list>-->
		
		<!-- Hardcoding this list is not ideal.  These should be added dynamically by the session
		     when it is created (based on the resource file that lists all the munge steps) -->
		     
		<subclass name="CleanseResultStep" />
		<subclass name="ConcatMungeStep" />
		<subclass name="DoubleMetaphoneMungeStep" />
		<subclass name="MD5CheckSumMungeStep" />
		<subclass name="GoogleAddressLookup" />
		<subclass name="LowerCaseMungeStep" />
		<subclass name="MetaphoneMungeStep" />
		<subclass name="NumberToStringMungeStep" />
		<subclass name="DeDupeResultStep" />
		<subclass name="RefinedSoundexMungeStep" />
		<subclass name="RetainCharactersMungeStep" />
		<subclass name="SoundexMungeStep" />
		<subclass name="SQLInputStep" />
		<subclass name="StringConstantMungeStep" />
		<subclass name="StringSubstitutionMungeStep" />
		<subclass name="SubstringByWordMungeStep" />
		<subclass name="SubstringMungeStep" />
		<subclass name="TranslateWordMungeStep" />
		<subclass name="TrimSpacesMungeStep" />
		<subclass name="UpperCaseMungeStep" />
		<subclass name="WordCountMungeStep" />
		<subclass name="DateToStringMungeStep" />
		<subclass name="StringToNumberMungeStep" />
		<subclass name="StringToDateMungeStep" />
		<subclass name="NumberConstantMungeStep" />
		<subclass name="BooleanConstantMungeStep" />
		<subclass name="StringToBooleanMungeStep" />
		<subclass name="BooleanToStringMungeStep" />
		<subclass name="DateConstantMungeStep" />
		<subclass name="CSVWriterMungeStep" />
		<subclass name="EmptyStringToNullMungeStep" />
		
	</class>
</hibernate-mapping>
