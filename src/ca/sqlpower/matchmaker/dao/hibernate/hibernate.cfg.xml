<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

     <session-factory>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <mapping resource="ca/sqlpower/matchmaker/dao/hibernate/PlFolder.hbm.xml"/>
        <mapping resource="ca/sqlpower/matchmaker/dao/hibernate/PlMatch.hbm.xml"/>
        <mapping resource="ca/sqlpower/matchmaker/dao/hibernate/PlMatchTranslate.hbm.xml"/>
        <mapping resource="ca/sqlpower/matchmaker/dao/hibernate/PlMatchTranslateGroup.hbm.xml"/>
        <mapping resource="ca/sqlpower/matchmaker/dao/hibernate/PlMatchCriteria.hbm.xml"/>
        <mapping resource="ca/sqlpower/matchmaker/dao/hibernate/PlMatchGroup.hbm.xml"/>
        <mapping resource="ca/sqlpower/matchmaker/dao/hibernate/PlMergeCriteria.hbm.xml"/>
    </session-factory>

</hibernate-configuration>
